.Black {
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0);
}

.Black--Fade {
    background-color: rgb(0, 0, 0);
}

.White {
    position: absolute;
    background-color: rgba(255, 255, 255, 0);
    width: 100%;
    height: 100%;
}

.White--Fade {
    background-color: rgb(255, 255, 255);
}
